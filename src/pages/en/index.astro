---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import ClientsSection from "@components/sections/landing/ClientsSection.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import TestimonialsSection from "@components/sections/testimonials/TestimonialsSection.astro";
import FAQ from "@components/sections/FAQ.astro";
import heroImage from "@images/hero-image.webp";
import faqs from "@data/faqs.json";
import features from "@data/features.json"; 
import seguridad from "@images/seguridad.webp";
import entregaRapida from "@images/entrega-rapida.webp";
import soporte from "@images/soporte.webp";

const avatarSrcs: Array<string> = [
  "https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1531927557220-a9e23c1e4794?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1541101767792-f9b2b1c4f127?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&&auto=format&fit=facearea&facepad=3&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1492562080023-ab3db95bfbce?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
];
---

<MainLayout>
  <HeroSection
    title=`Fast & Secure Service with <span
        class="text-orange">TCE IMPORTS</span>`
    subTitle="We prioritize efficiency and safety in every delivery, ensuring you a fast and reliable service for your peace of mind."
    primaryBtn="Escríbenos"
    primaryBtnURL="https://api.whatsapp.com/send?phone=573228553687&text=Hola%2Ctengo%20una%20consulta."
    secondaryBtn="Más Detalles"
    secondaryBtnURL="/services"
    withReview={true}
    avatars={avatarSrcs}
    rating=`<span class="font-bold">4.8</span> / 5`
    starCount={4}
    reviews=`De más de <span class="font-bold">1.2k</span> Reseñas`
    src={heroImage}
    alt="repartidores de tce imports"
  />

  <ClientsSection
    title="Con la confianza de los líderes de la industria"
    subTitle="Experimente la confiabilidad elegida por los grandes de la industria."
  />

  <FeaturesGeneral
    title="¿Qué Ofrecemos?"
    subTitle="En TCE IMPORTS, nos dedicamos a simplificar el proceso de importación para ti. Nuestra misión es brindarte acceso a productos de calidad de todo el mundo, sin complicaciones ni estrés."
    alt="ScrewFast products in floating boxes"
    features={features}
  />

  <FeaturesNavs
    title=`¿Por Qué Elegir <span class="text-orange dark:text-orange">TCE IMPORTS</span>?`
    tabs={[
      {
        heading: "Entrega Rápida",
        content:
          "Velocidad y puntualidad definen nuestras importaciones. Tus productos, en tiempo récord, cruzando fronteras sin contratiempos.",
        svg: "priority",
        src: entregaRapida,
        alt: "blue and black heavy equipment on brown grass field",
        first: true,
      },
      {
        heading: "Soporte 24/7",
        content:
          "Disponibles siempre, resolvemos tus dudas y aseguramos una experiencia de importación fluida. Estamos contigo en cada paso.",
        svg: "tools",
        src: soporte,
        alt: "A screenshot or graphic representation of the intuitive dashboard",
        second: true,
      },
      {
        heading: "Seguridad y Confianza",
        content:
          "Tus productos en manos seguras. Con protocolos estrictos y seguimiento detallado, garantizamos entregas perfectas y fiables.",
        svg: "segury",
        src: seguridad,
        alt: "Gray metal building frame near tower crane during daytime",
      },
    ]}
  />

  <TestimonialsSection
    title="Somos Tu Mejor Aliado en Importaciones"
    subTitle="Importando Sueños desde el 2020"
    ;
    testimonials={[
      {
        content:
          "Estoy realmente impresionado con la eficiencia y profesionalismo de TCE IMPORTS. La atención al detalle y la puntualidad en las entregas demuestran su compromiso con la excelencia.",
        author: "Viviana Orduz",
        role: "Comerciante",
        avatarSrc:
          "https://images.unsplash.com/photo-1593104547489-5cfb3839a3b5?q=80&w=1453&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D8&auto=format&fit=facearea&facepad=2&w=320&h=320&q=80",
      },
    ]}
    statistics={[
      {
        count: "4.5k+",
        description:
          "Entregas Exitosas. Precisión y eficiencia en cada operación",
      },
      {
        count: "450+",
        description:
          "CLIENTES. Confianza y satisfacción en nuestra red.",
      },
      {
        count: "80+",
        description:
          "EMPRESAS. Sinergia e innovación en colaboración.",
      },
      {
        count: "10+",
        description: "Aliados logtisticos. Amplia cobertura para entregas eficaces.",
      },
    ]}
  />


  <FAQ title="Preguntas frecuentes" faqs={faqs} />

  <HeroSectionAlt
    title="Conoce Nuestro Blog"
    subTitle="Descubre consejos esenciales, tendencias del mercado y estrategias para importar con éxito. ¡Aprende a importar sin complicaciones y haz crecer tu negocio!"
    url="#"
  />
</MainLayout>
